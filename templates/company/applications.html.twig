{% extends 'company/base.html.twig' %} {% block title %}Applications -
InternMatch{% endblock %} {% block company_content %}
<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col">
            <h1 class="h3 mb-0">Applications Received</h1>
            <p class="text-muted">Review and manage student applications</p>
        </div>
    </div>

    {# Filter Tabs #}
    <ul class="nav nav-tabs mb-4" id="statusTabs" role="tablist">
        <li class="nav-item" role="presentation">
            <button
                class="nav-link active"
                id="all-tab"
                data-bs-toggle="tab"
                data-bs-target="#all"
                type="button"
                role="tab"
            >
                All ({{ applications | length }})
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button
                class="nav-link"
                id="pending-tab"
                data-bs-toggle="tab"
                data-bs-target="#pending"
                type="button"
                role="tab"
            >
                Pending ({{ applications|filter(a => a.status == 'pending')|length





                }})
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button
                class="nav-link"
                id="accepted-tab"
                data-bs-toggle="tab"
                data-bs-target="#accepted"
                type="button"
                role="tab"
            >
                Accepted ({{ applications|filter(a => a.status == 'accepted')|length





                }})
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button
                class="nav-link"
                id="rejected-tab"
                data-bs-toggle="tab"
                data-bs-target="#rejected"
                type="button"
                role="tab"
            >
                Rejected ({{ applications|filter(a => a.status == 'rejected')|length





                }})
            </button>
        </li>
    </ul>

    {# Tab Content #}
    <div class="tab-content" id="statusTabsContent">
        {% for tabId, statusFilter in { 'all': null, 'pending': 'pending',
        'accepted': 'accepted', 'rejected': 'rejected' } %}
        <div
            class="tab-pane fade {{ tabId == 'all' ? 'show active' : '' }}"
            id="{{ tabId }}"
            role="tabpanel"
        >
            {% set filteredApps = statusFilter ? applications|filter(a =>
            a.status == statusFilter) : applications %} {% if filteredApps is
            empty %}
            <div class="alert alert-info">
                <i class="fas fa-info-circle me-2"></i>
                {% if statusFilter %} No {{ statusFilter }} applications found.
                {% else %} No applications received yet. {% endif %}
            </div>
            {% else %}
            <div class="card border-0 shadow-sm">
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0">
                            <thead class="bg-light">
                                <tr>
                                    <th class="ps-4">Student</th>
                                    <th>Position</th>
                                    <th>Match Score</th>
                                    <th>Skills</th>
                                    <th>Applied Date</th>
                                    <th>Status</th>
                                    <th class="pe-4 text-end">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for application in filteredApps %} {% set
                                student = application.student %} {% set
                                internship = application.internship %}
                                <tr>
                                    <td class="ps-4">
                                        <div class="d-flex align-items-center">
                                            <div
                                                class="avatar-circle bg-primary text-white me-3"
                                            >
                                                {{ student.firstName | first
                                                }}{{ student.lastName | first }}
                                            </div>
                                            <div>
                                                <strong
                                                    >{{ student.firstName }}
                                                    {{
                                                        student.lastName
                                                    }}</strong
                                                >
                                                <br />
                                                <small class="text-muted">{{
                                                    student.email
                                                }}</small>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <strong>{{ internship.title }}</strong>
                                        <br />
                                        <small class="text-muted">
                                            <i
                                                class="fas fa-map-marker-alt me-1"
                                            ></i>
                                            {{ internship.location }}
                                        </small>
                                    </td>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div
                                                class="progress me-2"
                                                style="
                                                    width: 100px;
                                                    height: 10px;
                                                "
                                            >
                                                <div
                                                    class="progress-bar bg-{{
                                                        application.matchScore >=
                                                        90
                                                            ? 'success'
                                                            : application.matchScore >=
                                                              75
                                                            ? 'info'
                                                            : application.matchScore >=
                                                              60
                                                            ? 'warning'
                                                            : 'secondary'
                                                    }}"
                                                    role="progressbar"
                                                    style="width: {{
                                                        application.matchScore
                                                    }}%"
                                                ></div>
                                            </div>
                                            <span
                                                class="badge match-badge match-{{
                                                    application.matchScore >= 90
                                                        ? 'excellent'
                                                        : application.matchScore >=
                                                          75
                                                        ? 'good'
                                                        : application.matchScore >=
                                                          60
                                                        ? 'fair'
                                                        : 'low'
                                                }}"
                                            >
                                                {{ application.matchScore }}%
                                            </span>
                                        </div>
                                    </td>
                                    <td>
                                        {% for skill in student.skills|slice(0,
                                        3) %}
                                        <span
                                            class="badge bg-light text-dark me-1"
                                            >{{ skill }}</span
                                        >
                                        {% endfor %} {% if student.skills|length
                                        > 3 %}
                                        <span class="badge bg-light text-dark"
                                            >+{{ student.skills|length - 3 }}</span
                                        >
                                        {% endif %}
                                    </td>
                                    <td>
                                        <small
                                            >{{ application.appliedAt|date('M d, Y') }}</small
                                        >
                                        <br />
                                        <small
                                            class="text-muted"
                                            >{{ application.appliedAt|date('g:i A') }}</small
                                        >
                                    </td>
                                    <td>
                                        <span
                                            class="badge status-badge status-{{
                                                application.status
                                            }}"
                                        >
                                            {% if application.status ==
                                            'pending' %}
                                            <i class="fas fa-clock me-1"></i>
                                            {% elseif application.status ==
                                            'accepted' %}
                                            <i
                                                class="fas fa-check-circle me-1"
                                            ></i>
                                            {% else %}
                                            <i
                                                class="fas fa-times-circle me-1"
                                            ></i>
                                            {% endif %}
                                            {{ application.status | upper }}
                                        </span>
                                    </td>
                                    <td class="pe-4 text-end">
                                        <button
                                            class="btn btn-sm btn-outline-primary me-1"
                                            data-bs-toggle="modal"
                                            data-bs-target="#studentModal{{
                                                application.id
                                            }}"
                                        >
                                            <i class="fas fa-eye me-1"></i>
                                            View Profile
                                        </button>

                                        {# Boutons Accept/Reject (seulement pour
                                        status = pending) #} {% if
                                        application.status == 'pending' %} {#
                                        Bouton Accept #}
                                        <button
                                            type="button"
                                            class="btn btn-sm btn-success"
                                            data-bs-toggle="modal"
                                            data-bs-target="#acceptModal{{
                                                application.id
                                            }}"
                                        >
                                            <i class="fas fa-check"></i> Accept
                                        </button>

                                        {# Bouton Reject #}
                                        <button
                                            type="button"
                                            class="btn btn-sm btn-danger"
                                            data-bs-toggle="modal"
                                            data-bs-target="#rejectModal{{
                                                application.id
                                            }}"
                                        >
                                            <i class="fas fa-times"></i> Reject
                                        </button>
                                        {% endif %}
                                    </td>
                                </tr>

                                {# Student Profile Modal #}
                                <div
                                    class="modal fade"
                                    id="studentModal{{ application.id }}"
                                    tabindex="-1"
                                >
                                    <div class="modal-dialog modal-lg">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title">
                                                    <i
                                                        class="fas fa-user me-2"
                                                    ></i>
                                                    Student Profile
                                                </h5>
                                                <button
                                                    type="button"
                                                    class="btn-close"
                                                    data-bs-dismiss="modal"
                                                ></button>
                                            </div>
                                            <div class="modal-body">
                                                <div class="text-center mb-4">
                                                    <div
                                                        class="avatar-circle-large bg-primary text-white mx-auto mb-3"
                                                    >
                                                        <span class="display-4"
                                                            >{{
                                                                student.firstName
                                                                    | first
                                                            }}{{
                                                                student.lastName
                                                                    | first
                                                            }}</span
                                                        >
                                                    </div>
                                                    <h4>
                                                        {{ student.firstName }}
                                                        {{ student.lastName }}
                                                    </h4>
                                                    <p class="text-muted">
                                                        {{ student.email }}
                                                    </p>
                                                    {% if student.phone %}
                                                    <p class="text-muted">
                                                        <i
                                                            class="fas fa-phone me-2"
                                                        ></i>
                                                        {{ student.phone }}
                                                    </p>
                                                    {% endif %}
                                                </div>

                                                <hr />

                                                <div class="mb-4">
                                                    <h6 class="fw-bold mb-3">
                                                        <i
                                                            class="fas fa-info-circle me-2"
                                                        ></i>
                                                        About
                                                    </h6>
                                                    <p class="text-muted">
                                                        {{
                                                            student.bio ??
                                                                "No bio provided."
                                                        }}
                                                    </p>
                                                </div>

                                                <div class="mb-4">
                                                    <h6 class="fw-bold mb-3">
                                                        <i
                                                            class="fas fa-code me-2"
                                                        ></i>
                                                        Skills
                                                    </h6>
                                                    <div>
                                                        {% for skill in
                                                        student.skills %}
                                                        <span
                                                            class="badge bg-primary me-1 mb-1 p-2"
                                                            >{{ skill }}</span
                                                        >
                                                        {% endfor %}
                                                    </div>
                                                </div>

                                                <div class="row">
                                                    <div class="col-md-6 mb-3">
                                                        <h6 class="fw-bold">
                                                            <i
                                                                class="fas fa-map-marker-alt me-2"
                                                            ></i>
                                                            Expected Location
                                                        </h6>
                                                        <p class="text-muted">
                                                            {{
                                                                student.expectedLocation ??
                                                                    "Not specified"
                                                            }}
                                                        </p>
                                                    </div>
                                                    <div class="col-md-6 mb-3">
                                                        <h6 class="fw-bold">
                                                            <i
                                                                class="fas fa-calendar-alt me-2"
                                                            ></i>
                                                            Expected Duration
                                                        </h6>
                                                        <p class="text-muted">
                                                            {{
                                                                student.expectedDuration ??
                                                                    "Not specified"
                                                            }}
                                                            months
                                                        </p>
                                                    </div>
                                                </div>
                                                {% if application.message %}
                                                <hr />
                                                <div>
                                                    <h6 class="fw-bold mb-3">
                                                        <i
                                                            class="fas fa-envelope me-2"
                                                        ></i>
                                                        Cover Message
                                                    </h6>
                                                    <p
                                                        class="text-muted fst-italic"
                                                    >
                                                        "{{
                                                            application.message
                                                        }}"
                                                    </p>
                                                </div>
                                                {% endif %}
                                            </div>
                                            <div class="modal-footer">
                                                <button
                                                    type="button"
                                                    class="btn btn-secondary"
                                                    data-bs-dismiss="modal"
                                                >
                                                    Close
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                {# Modal Accept #}
                                <div
                                    class="modal fade"
                                    id="acceptModal{{ application.id }}"
                                    tabindex="-1"
                                    aria-hidden="true"
                                >
                                    <div
                                        class="modal-dialog modal-dialog-centered"
                                    >
                                        <div class="modal-content">
                                            <div
                                                class="modal-header bg-success text-white"
                                            >
                                                <h5 class="modal-title">
                                                    <i
                                                        class="fas fa-check-circle"
                                                    ></i>
                                                    Accept Application
                                                </h5>
                                                <button
                                                    type="button"
                                                    class="btn-close btn-close-white"
                                                    data-bs-dismiss="modal"
                                                    aria-label="Close"
                                                ></button>
                                            </div>

                                            <div class="modal-body">
                                                <p>
                                                    <strong
                                                        >Accept this
                                                        application?</strong
                                                    >
                                                </p>

                                                <div
                                                    class="student-info mb-3 p-3 bg-light rounded"
                                                >
                                                    <h6 class="mb-2">
                                                        <i
                                                            class="fas fa-user"
                                                        ></i>
                                                        {{
                                                            application.student
                                                                .firstName
                                                        }}
                                                        {{
                                                            application.student
                                                                .lastName
                                                        }}
                                                    </h6>
                                                    <p class="mb-1">
                                                        <i
                                                            class="fas fa-envelope"
                                                        ></i>
                                                        {{
                                                            application.student
                                                                .email
                                                        }}
                                                    </p>
                                                    <p class="mb-1">
                                                        <i
                                                            class="fas fa-briefcase"
                                                        ></i>
                                                        {{
                                                            application
                                                                .internship
                                                                .title
                                                        }}
                                                    </p>
                                                    <p class="mb-0">
                                                        <span
                                                            class="badge"
                                                            style="background: {% if application.matchScore >= 80 %}#10b981{% elseif application.matchScore >= 60 %}#3b82f6{% else %}#f59e0b{% endif %}"
                                                        >
                                                            {{
                                                                application.matchScore
                                                            }}% Match
                                                        </span>
                                                    </p>
                                                </div>

                                                {% if application.message %}
                                                <div class="mb-3">
                                                    <label class="form-label"
                                                        ><strong
                                                            >Student's
                                                            Message:</strong
                                                        ></label
                                                    >
                                                    <div
                                                        class="p-2 bg-light rounded"
                                                    >
                                                        {{
                                                            application.message
                                                        }}
                                                    </div>
                                                </div>
                                                {% endif %}

                                                <div
                                                    class="alert alert-success mb-0"
                                                >
                                                    <i
                                                        class="fas fa-info-circle"
                                                    ></i>
                                                    The student will be notified
                                                    of your decision.
                                                </div>
                                            </div>

                                            <div class="modal-footer">
                                                <button
                                                    type="button"
                                                    class="btn btn-secondary"
                                                    data-bs-dismiss="modal"
                                                >
                                                    <i class="fas fa-times"></i>
                                                    Cancel
                                                </button>
                                                <form
                                                    method="POST"
                                                    action="{{
                                                        path(
                                                            'company_application_accept',
                                                            {
                                                                id: application.id
                                                            }
                                                        )
                                                    }}"
                                                    style="display: inline"
                                                >
                                                    <button
                                                        type="submit"
                                                        class="btn btn-success"
                                                    >
                                                        <i
                                                            class="fas fa-check"
                                                        ></i>
                                                        Accept Application
                                                    </button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                {# Modal Reject #}
                                <div
                                    class="modal fade"
                                    id="rejectModal{{ application.id }}"
                                    tabindex="-1"
                                    aria-hidden="true"
                                >
                                    <div
                                        class="modal-dialog modal-dialog-centered"
                                    >
                                        <div class="modal-content">
                                            <div
                                                class="modal-header bg-danger text-white"
                                            >
                                                <h5 class="modal-title">
                                                    <i
                                                        class="fas fa-times-circle"
                                                    ></i>
                                                    Reject Application
                                                </h5>
                                                <button
                                                    type="button"
                                                    class="btn-close btn-close-white"
                                                    data-bs-dismiss="modal"
                                                    aria-label="Close"
                                                ></button>
                                            </div>

                                            <div class="modal-body">
                                                <p>
                                                    <strong
                                                        >Reject this
                                                        application?</strong
                                                    >
                                                </p>

                                                <div
                                                    class="student-info mb-3 p-3 bg-light rounded"
                                                >
                                                    <h6 class="mb-2">
                                                        <i
                                                            class="fas fa-user"
                                                        ></i>
                                                        {{
                                                            application.student
                                                                .firstName
                                                        }}
                                                        {{
                                                            application.student
                                                                .lastName
                                                        }}
                                                    </h6>
                                                    <p class="mb-1">
                                                        <i
                                                            class="fas fa-envelope"
                                                        ></i>
                                                        {{
                                                            application.student
                                                                .email
                                                        }}
                                                    </p>
                                                    <p class="mb-0">
                                                        <i
                                                            class="fas fa-briefcase"
                                                        ></i>
                                                        {{
                                                            application
                                                                .internship
                                                                .title
                                                        }}
                                                    </p>
                                                </div>

                                                <div
                                                    class="alert alert-warning mb-0"
                                                >
                                                    <i
                                                        class="fas fa-exclamation-triangle"
                                                    ></i>
                                                    The student will be notified
                                                    of your decision.
                                                </div>
                                            </div>

                                            <div class="modal-footer">
                                                <button
                                                    type="button"
                                                    class="btn btn-secondary"
                                                    data-bs-dismiss="modal"
                                                >
                                                    <i
                                                        class="fas fa-arrow-left"
                                                    ></i>
                                                    Cancel
                                                </button>
                                                <form
                                                    method="POST"
                                                    action="{{
                                                        path(
                                                            'company_application_reject',
                                                            {
                                                                id: application.id
                                                            }
                                                        )
                                                    }}"
                                                    style="display: inline"
                                                >
                                                    <button
                                                        type="submit"
                                                        class="btn btn-danger"
                                                    >
                                                        <i
                                                            class="fas fa-times"
                                                        ></i>
                                                        Reject Application
                                                    </button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            {% endif %}
        </div>
        {% endfor %}
    </div>
</div>
{% endblock %} {% block stylesheets %}
{{ parent() }}
<link rel="stylesheet" href="{{ asset('css/company/applications.css') }}" />
{% endblock %}
