{% extends 'company/base.html.twig' %} {% block title %}Company Dashboard -
InternMatch{% endblock %} {% block company_content %}
<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col">
            <h1 class="h3 mb-0">Company Dashboard</h1>
            <p class="text-muted">Welcome back, {{ app.user.companyName }}!</p>
        </div>
        <div class="col-auto">
            <a
                href="{{ path('company_internship_create') }}"
                class="btn btn-primary"
            >
                <i class="fas fa-plus me-2"></i>
                Post New Internship
            </a>
        </div>
    </div>

    {# Statistics Cards #}
    <div class="row g-4 mb-5">
        <div class="col-md-6 col-xl-3">
            <div class="card stats-card border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div
                            class="stat-icon bg-primary bg-opacity-10 text-primary rounded-3 p-3 me-3"
                        >
                            <i class="fas fa-briefcase fa-2x"></i>
                        </div>
                        <div>
                            <h6 class="text-muted mb-1">Active Internships</h6>
                            <h2 class="mb-0">{{ activeInternships }}</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6 col-xl-3">
            <div class="card stats-card border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div
                            class="stat-icon bg-info bg-opacity-10 text-info rounded-3 p-3 me-3"
                        >
                            <i class="fas fa-file-alt fa-2x"></i>
                        </div>
                        <div>
                            <h6 class="text-muted mb-1">Total Applications</h6>
                            <h2 class="mb-0">{{ totalApplications }}</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6 col-xl-3">
            <div class="card stats-card border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div
                            class="stat-icon bg-warning bg-opacity-10 text-warning rounded-3 p-3 me-3"
                        >
                            <i class="fas fa-clock fa-2x"></i>
                        </div>
                        <div>
                            <h6 class="text-muted mb-1">Pending Reviews</h6>
                            <h2 class="mb-0">{{ pendingApplications }}</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6 col-xl-3">
            <div class="card stats-card border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div
                            class="stat-icon bg-success bg-opacity-10 text-success rounded-3 p-3 me-3"
                        >
                            <i class="fas fa-user-check fa-2x"></i>
                        </div>
                        <div>
                            <h6 class="text-muted mb-1">Accepted Students</h6>
                            <h2 class="mb-0">{{ acceptedApplications }}</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        {# Recent Applications #}
        <div class="col-lg-8 mb-4">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white border-bottom py-3">
                    <h5 class="mb-0">
                        <i class="fas fa-clock me-2"></i>
                        Recent Applications
                    </h5>
                </div>
                <div class="card-body p-0">
                    {% if recentApplications is empty %}
                    <div class="p-4 text-center text-muted">
                        <i class="fas fa-inbox fa-3x mb-3"></i>
                        <p>No applications received yet.</p>
                    </div>
                    {% else %}
                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0">
                            <thead class="bg-light">
                                <tr>
                                    <th class="ps-4">Student</th>
                                    <th>Position</th>
                                    <th>Match Score</th>
                                    <th>Applied</th>
                                    <th class="pe-4">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for application in recentApplications %}
                                <tr>
                                    <td class="ps-4">
                                        <strong
                                            >{{
                                                application.student.firstName
                                            }}
                                            {{
                                                application.student.lastName
                                            }}</strong
                                        >
                                        <br />
                                        <small class="text-muted">{{
                                            application.student.email
                                        }}</small>
                                    </td>
                                    <td>{{ application.internship.title }}</td>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div
                                                class="progress me-2"
                                                style="width: 80px; height: 8px"
                                            >
                                                <div
                                                    class="progress-bar bg-{{
                                                        application.matchScore >=
                                                        90
                                                            ? 'success'
                                                            : application.matchScore >=
                                                              75
                                                            ? 'info'
                                                            : application.matchScore >=
                                                              60
                                                            ? 'warning'
                                                            : 'secondary'
                                                    }}"
                                                    role="progressbar"
                                                    style="width: {{
                                                        application.matchScore
                                                    }}%"
                                                ></div>
                                            </div>
                                            <small class="fw-semibold"
                                                >{{
                                                    application.matchScore
                                                }}%</small
                                            >
                                        </div>
                                    </td>
                                    <td>
                                        <small
                                            >{{ application.appliedAt|date('M d, Y') }}</small
                                        >
                                    </td>
                                    <td class="pe-4">
                                        <a
                                            href="{{
                                                path('company_applications')
                                            }}"
                                            class="btn btn-sm btn-outline-primary"
                                        >
                                            Review
                                        </a>
                                    </td>
                                </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                    {% endif %}
                </div>
                {% if recentApplications|length > 0 %}
                <div class="card-footer bg-white border-top text-center">
                    <a
                        href="{{ path('company_applications') }}"
                        class="btn btn-link"
                    >
                        View All Applications
                        <i class="fas fa-arrow-right ms-2"></i>
                    </a>
                </div>
                {% endif %}
            </div>
        </div>

        {# Applications Chart #}
        <div class="col-lg-4 mb-4">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white border-bottom py-3">
                    <h5 class="mb-0">
                        <i class="fas fa-chart-line me-2"></i>
                        Applications Trend
                    </h5>
                </div>
                <div class="card-body">
                    {% if totalApplications > 0 %}
                    <canvas id="applicationsChart"></canvas>
                    {% else %}
                    <div class="text-center py-5">
                        <i class="fas fa-chart-line fa-3x text-muted mb-3"></i>
                        <p class="text-muted">No application data yet.</p>
                        <small class="text-muted"
                            >The chart will appear once you receive
                            applications.</small
                        >
                    </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %} {% block stylesheets %}
{{ parent() }}
<link rel="stylesheet" href="{{ asset('css/company/dashboard.css') }}" />
{% endblock %} {% block javascripts %}
{{ parent() }}
<script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.min.js"></script>
<script>
        document.addEventListener('DOMContentLoaded', function() {
        const ctx = document.getElementById('applicationsChart');

        const monthlyStats = {{ monthlyStats|json_encode|raw }};
        const labels = Object.keys(monthlyStats);
        const data = Object.values(monthlyStats);

        new Chart(ctx, {
            type: 'line',
            data: {
                labels: labels,
                datasets: [{
                    label: 'Applications',
                    data: data,
                    borderColor: '#4F46E5',
                    backgroundColor: 'rgba(79, 70, 229, 0.1)',
                    tension: 0.4,
                    fill: true
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: true,
                plugins: {
                    legend: {
                        display: false
                    }
                },
                scales: {
                    y: {
                        beginAtZero: true,
                        ticks: {
                            stepSize: 1
                        }
                    }
                }
            }
        });
    });
</script>
{% endblock %}
