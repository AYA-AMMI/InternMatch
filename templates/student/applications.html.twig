{% extends 'student/base.html.twig' %} {% block title %}My Applications -
InternMatch{% endblock %} {% block student_content %}
<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col">
            <h1 class="h3 mb-0">My Applications</h1>
            <p class="text-muted">Track your internship applications</p>
        </div>
    </div>

    {# Filter Tabs #}
    <ul class="nav nav-tabs mb-4" id="statusTabs" role="tablist">
        <li class="nav-item" role="presentation">
            <button
                class="nav-link active"
                id="all-tab"
                data-bs-toggle="tab"
                data-bs-target="#all"
                type="button"
                role="tab"
            >
                All ({{ applications | length }})
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button
                class="nav-link"
                id="pending-tab"
                data-bs-toggle="tab"
                data-bs-target="#pending"
                type="button"
                role="tab"
            >
                Pending ({{ applications|filter(a => a.status == 'pending')|length




                }})
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button
                class="nav-link"
                id="accepted-tab"
                data-bs-toggle="tab"
                data-bs-target="#accepted"
                type="button"
                role="tab"
            >
                Accepted ({{ applications|filter(a => a.status == 'accepted')|length




                }})
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button
                class="nav-link"
                id="rejected-tab"
                data-bs-toggle="tab"
                data-bs-target="#rejected"
                type="button"
                role="tab"
            >
                Rejected ({{ applications|filter(a => a.status == 'rejected')|length




                }})
            </button>
        </li>
    </ul>

    {# Tab Content #}
    <div class="tab-content" id="statusTabsContent">
        {% for tabId, statusFilter in { 'all': null, 'pending': 'pending',
        'accepted': 'accepted', 'rejected': 'rejected' } %}
        <div
            class="tab-pane fade {{ tabId == 'all' ? 'show active' : '' }}"
            id="{{ tabId }}"
            role="tabpanel"
        >
            {% set filteredApps = statusFilter ? applications|filter(a =>
            a.status == statusFilter) : applications %} {% if filteredApps is
            empty %}
            <div class="alert alert-info">
                <i class="fas fa-info-circle me-2"></i>
                {% if statusFilter %} No {{ statusFilter }} applications found.
                {% else %} You haven't applied to any internships yet.
                <a href="{{ path('student_internships') }}" class="alert-link"
                    >Browse internships</a
                >
                to get started! {% endif %}
            </div>
            {% else %}
            <div class="card border-0 shadow-sm">
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0">
                            <thead class="bg-light">
                                <tr>
                                    <th class="ps-4">Position</th>
                                    <th>Company</th>
                                    <th>Match Score</th>
                                    <th>Applied Date</th>
                                    <th>Status</th>
                                    <th class="pe-4 text-end">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for application in filteredApps %} {% set
                                internship = application.internship %}
                                <tr>
                                    <td class="ps-4">
                                        <strong>{{ internship.title }}</strong>
                                        <br />
                                        <small class="text-muted">
                                            <i
                                                class="fas fa-map-marker-alt me-1"
                                            ></i>
                                            {{ internship.location }}
                                        </small>
                                    </td>
                                    <td>
                                        {{ internship.company.companyName }}
                                        <br />
                                        <span
                                            class="badge bg-light text-dark"
                                            >{{
                                                internship.company.industry
                                            }}</span
                                        >
                                    </td>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div
                                                class="me-2"
                                                style="width: 100px"
                                            >
                                                <div
                                                    class="progress"
                                                    style="height: 8px"
                                                >
                                                    <div
                                                        class="progress-bar bg-{{
                                                            application.matchScore >=
                                                            90
                                                                ? 'success'
                                                                : application.matchScore >=
                                                                  75
                                                                ? 'info'
                                                                : application.matchScore >=
                                                                  60
                                                                ? 'warning'
                                                                : 'secondary'
                                                        }}"
                                                        role="progressbar"
                                                        style="width: {{
                                                            application.matchScore
                                                        }}%"
                                                        aria-valuenow="{{
                                                            application.matchScore
                                                        }}"
                                                        aria-valuemin="0"
                                                        aria-valuemax="100"
                                                    ></div>
                                                </div>
                                            </div>
                                            <small class="fw-semibold"
                                                >{{
                                                    application.matchScore
                                                }}%</small
                                            >
                                        </div>
                                    </td>
                                    <td>
                                        <small
                                            >{{ application.appliedAt|date('M d, Y') }}</small
                                        >
                                        <br />
                                        <small
                                            class="text-muted"
                                            >{{ application.appliedAt|date('g:i A') }}</small
                                        >
                                    </td>
                                    <td>
                                        <span
                                            class="badge status-badge status-{{
                                                application.status
                                            }}"
                                        >
                                            {% if application.status ==
                                            'pending' %}
                                            <i class="fas fa-clock me-1"></i>
                                            {% elseif application.status ==
                                            'accepted' %}
                                            <i
                                                class="fas fa-check-circle me-1"
                                            ></i>
                                            {% else %}
                                            <i
                                                class="fas fa-times-circle me-1"
                                            ></i>
                                            {% endif %}
                                            {{ application.status | upper }}
                                        </span>
                                    </td>
                                    <td class="pe-4 text-end">
                                        <a
                                            href="{{
                                                path(
                                                    'student_internship_details',
                                                    { id: internship.id }
                                                )
                                            }}"
                                            class="btn btn-sm btn-outline-primary me-2"
                                            data-bs-toggle="tooltip"
                                            title="View Details"
                                        >
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        {% if application.status == 'pending' %}
                                        <button
                                            type="button"
                                            class="btn btn-sm btn-danger"
                                            data-bs-toggle="modal"
                                            data-bs-target="#withdrawModal{{
                                                application.id
                                            }}"
                                        >
                                            <i class="fas fa-times-circle"></i>
                                            Withdraw
                                        </button>
                                        {% endif %}
                                    </td>
                                </tr>
                                <div
                                    class="modal fade"
                                    id="withdrawModal{{ application.id }}"
                                    tabindex="-1"
                                    aria-hidden="true"
                                >
                                    <div
                                        class="modal-dialog modal-dialog-centered"
                                    >
                                        <div class="modal-content">
                                            <div
                                                class="modal-header bg-warning text-dark"
                                            >
                                                <h5 class="modal-title">
                                                    <i
                                                        class="fas fa-exclamation-triangle"
                                                    ></i>
                                                    Withdraw Application
                                                </h5>
                                                <button
                                                    type="button"
                                                    class="btn-close"
                                                    data-bs-dismiss="modal"
                                                    aria-label="Close"
                                                ></button>
                                            </div>

                                            <div class="modal-body">
                                                <p>
                                                    <strong
                                                        >Are you sure you want
                                                        to withdraw this
                                                        application?</strong
                                                    >
                                                </p>

                                                <div
                                                    class="application-info mb-3 p-3 bg-light rounded"
                                                >
                                                    <p class="mb-1">
                                                        <i
                                                            class="fas fa-briefcase"
                                                        ></i>
                                                        <strong>{{
                                                            application
                                                                .internship
                                                                .title
                                                        }}</strong>
                                                    </p>
                                                    <p class="mb-1 text-muted">
                                                        <i
                                                            class="fas fa-building"
                                                        ></i>
                                                        {{
                                                            application
                                                                .internship
                                                                .company
                                                                .companyName
                                                        }}
                                                    </p>
                                                    <p class="mb-1 text-muted">
                                                        <i
                                                            class="fas fa-calendar"
                                                        ></i>
                                                        Applied on
                                                        {{ application.appliedAt|date('M d, Y') }}
                                                    </p>
                                                    <p class="mb-0">
                                                        <span
                                                            class="badge"
                                                            style="background: {% if application.matchScore >= 80 %}#10b981{% elseif application.matchScore >= 60 %}#3b82f6{% else %}#f59e0b{% endif %}"
                                                        >
                                                            {{
                                                                application.matchScore
                                                            }}% Match
                                                        </span>
                                                    </p>
                                                </div>

                                                <div
                                                    class="alert alert-warning mb-0"
                                                >
                                                    <i
                                                        class="fas fa-info-circle"
                                                    ></i>
                                                    <strong>Warning:</strong>
                                                    This action cannot be
                                                    undone. You'll need to
                                                    reapply if you change your
                                                    mind.
                                                </div>
                                            </div>

                                            <div class="modal-footer">
                                                <button
                                                    type="button"
                                                    class="btn btn-secondary"
                                                    data-bs-dismiss="modal"
                                                >
                                                    <i
                                                        class="fas fa-arrow-left"
                                                    ></i>
                                                    Keep Application
                                                </button>
                                                <form
                                                    method="POST"
                                                    action="{{
                                                        path(
                                                            'student_withdraw_application',
                                                            {
                                                                id: application.id
                                                            }
                                                        )
                                                    }}"
                                                    style="display: inline"
                                                >
                                                    <button
                                                        type="submit"
                                                        class="btn btn-danger"
                                                    >
                                                        <i
                                                            class="fas fa-times-circle"
                                                        ></i>
                                                        Withdraw Application
                                                    </button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            {% endif %}
        </div>
        {% endfor %}
    </div>
</div>
{% endblock %} {% block stylesheets %}
{{ parent() }}
<link rel="stylesheet" href="{{ asset('css/student/applications.css') }}" />
{% endblock %} {% block javascripts %}
{{ parent() }}
<script src="{{ asset('js/student/applications.js') }}"></script>
{% endblock %}
