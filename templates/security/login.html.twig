{% extends 'base.html.twig' %} {% block title %}Log in{% endblock %} {% block
stylesheets %}
{{ parent() }}
<link rel="stylesheet" href="{{ asset('css/login.css') }}" />
{% endblock %} {% block body %}
<div class="container-fluid login-container">
    <div class="row w-100 justify-content-center align-items-center">
        {# Section gauche - Bienvenue #}
        <div class="col-lg-5 d-none d-lg-block">
            <div class="welcome-section">
                <h1 class="display-4 fw-bold mb-4">Welcome to InternMatch</h1>
                <p class="lead mb-4">
                    Connecting talented students with amazing opportunities
                </p>

                <div class="d-flex align-items-center mb-3">
                    <div class="bg-white bg-opacity-25 rounded p-3 me-3">
                        <i class="fas fa-user-graduate fa-2x"></i>
                    </div>
                    <div>
                        <h5>Students find their dream internships</h5>
                    </div>
                </div>

                <div class="d-flex align-items-center">
                    <div class="bg-white bg-opacity-25 rounded p-3 me-3">
                        <i class="fas fa-building fa-2x"></i>
                    </div>
                    <div>
                        <h5>Companies discover top talent</h5>
                    </div>
                </div>
            </div>
        </div>

        {# Section droite - Formulaire #}
        <div class="col-lg-5 col-md-8 col-sm-10">
            <div class="card login-card shadow-lg">
                <div class="card-body p-5">
                    <h2 class="text-center mb-2">Sign In</h2>
                    <p class="text-center text-muted mb-4">
                        Enter your credentials to continue
                    </p>

                    {# Affichage des erreurs #} {% if error %}
                    <div class="alert alert-danger">
                        {{ error.messageKey|trans(error.messageData, 'security') }}
                    </div>
                    {% endif %}

                    <form method="post" action="{{ path('app_login') }}">
                        {# CSRF Token #}
                        <input
                            type="hidden"
                            name="_csrf_token"
                            value="{{ csrf_token('authenticate') }}"
                        />

                        {# Email #}
                        <div class="mb-3">
                            <label for="email" class="form-label">Email</label>
                            <input
                                type="email"
                                class="form-control form-control-lg"
                                id="email"
                                name="_username"
                                value="{{ last_username }}"
                                placeholder="Enter your email"
                                required
                                autofocus
                            />
                        </div>

                        {# Mot de passe #}
                        <div class="mb-3">
                            <div
                                class="d-flex justify-content-between align-items-center mb-2"
                            >
                                <label for="password" class="form-label mb-0"
                                    >Password</label
                                >
                            </div>
                            <input
                                type="password"
                                class="form-control form-control-lg"
                                id="password"
                                name="_password"
                                placeholder="Enter your password"
                                required
                            />
                        </div>

                        {# Se souvenir de moi #}
                        <div class="form-check mb-4">
                            <input
                                class="form-check-input"
                                type="checkbox"
                                name="_remember_me"
                                id="remember_me"
                            />
                            <label class="form-check-label" for="remember_me">
                                Remember me
                            </label>
                        </div>

                        {# Bouton de connexion #}
                        <button
                            type="submit"
                            class="btn btn-primary btn-lg w-100 mb-3"
                        >
                            Sign In
                        </button>

                        {# Lien vers inscription #}
                        <p class="text-center mb-0">
                            Don't have an account?
                            <a
                                href="{{ path('app_register') }}"
                                class="text-primary fw-semibold"
                                >Sign Up</a
                            >
                        </p>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
