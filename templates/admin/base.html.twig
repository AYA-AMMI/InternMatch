{% extends 'base.html.twig' %} {% block title %}Admin Panel - {{ parent() }}{%
endblock %} {% block stylesheets %}
{{ parent() }}
<link rel="stylesheet" href="{{ asset('css/admin/base.css') }}" />
{% block admin_stylesheets %}{% endblock %} {% endblock %} {% block body %}
<div class="admin-wrapper">
    {# Sidebar Navigation #}
    <aside class="admin-sidebar">
        <div class="sidebar-header">
            <i class="fas fa-shield-halved"></i>
            <h4>Admin Panel</h4>
        </div>

        <nav class="sidebar-nav">
            <a
                href="{{ path('admin_dashboard') }}"
                class="nav-item {{
                    app.request.get('_route') == 'admin_dashboard'
                        ? 'active'
                        : ''
                }}"
            >
                <i class="fas fa-chart-line"></i>
                <span>Dashboard</span>
            </a>

            <a
                href="{{ path('admin_users') }}"
                class="nav-item {{ app.request.get('_route') starts with 'admin_user' ? 'active' : '' }}"
            >
                <i class="fas fa-users"></i>
                <span>Users Management</span>
            </a>

            <a
                href="{{ path('admin_internships') }}"
                class="nav-item {{ app.request.get('_route') starts with 'admin_internship' ? 'active' : '' }}"
            >
                <i class="fas fa-briefcase"></i>
                <span>Internships</span>
            </a>

            <a
                href="{{ path('admin_statistics') }}"
                class="nav-item {{ app.request.get('_route') starts with 'admin_statistic' ? 'active' : '' }}"
            >
                <i class="fas fa-chart-bar"></i>
                <span>Statistics</span>
            </a>

            <div class="nav-divider"></div>

            <a href="{{ path('app_logout') }}" class="nav-item nav-logout">
                <i class="fas fa-sign-out-alt"></i>
                <span>Logout</span>
            </a>
        </nav>

        <div class="sidebar-footer">
            <div class="admin-info">
                <i class="fas fa-user-shield"></i>
                <div>
                    <p class="admin-email">{{ app.user.email }}</p>
                    <p class="admin-role">Administrator</p>
                </div>
            </div>
        </div>
    </aside>

    {# Main Content Area #}
    <main class="admin-content">
        {# Top Bar #}
        <div class="admin-topbar">
            <div class="topbar-left">
                <button class="sidebar-toggle" id="sidebarToggle">
                    <i class="fas fa-bars"></i>
                </button>
                <h1 class="page-title">
                    {% block page_title %}Admin Panel{% endblock %}
                </h1>
            </div>
            <div class="topbar-right">
                <div class="topbar-info">
                    <i class="fas fa-calendar-day"></i>
                    <span>{{ "now"|date("F d, Y") }}</span>
                </div>
            </div>
        </div>

        {# Page Content #}
        <div class="admin-main">{% block admin_content %}{% endblock %}</div>
    </main>
</div>
{% endblock %} {% block javascripts %}
{{ parent() }}
<script src="{{ asset('js/admin/base.js') }}"></script>
{% block admin_javascripts %}{% endblock %} {% endblock %}
